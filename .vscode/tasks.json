{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run FastAPI Backend",
      "type": "shell",
      "command": "uvicorn backend.app:app --reload",
      "group": "build",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run Electron Desktop App",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "problemMatcher": [],
      "dependsOn": "Install Frontend Dependencies"
    },
    {
      "label": "Start Full Application",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Run FastAPI Backend",
        "Run Electron Desktop App"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
